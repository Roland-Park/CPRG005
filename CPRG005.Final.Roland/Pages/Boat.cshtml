@page
@model CPRG005.Final.Roland.Pages.BoatModel
@using CPRG005.Final.Roland.Models
@{
    <h1>LIST OF BOATS</h1>
    <p>
        A register boat page where authenticated users can register one or more boats
        as well as update their boat information
    </p>

    <a class="btn btn-primary btn-lg" asp-area="" asp-page="/CreateBoat">Register New Boat</a>
    <br />

    @if (Model.Boats.Count < 1)
    {
        <h6>No boats to display.</h6>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Registration Number</th>
                    <th scope="col">Manufacturer</th>
                    <th scope="col">Model Year</th>
                    <th scope="col">Length</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Boat boat in Model.Boats)
                {
                    <tr>
                        <td>@boat.RegistrationNumber</td>
                        <td>@boat.Manufacturer</td>
                        <td>@boat.ModelYear</td>
                        <td>@boat.Length</td>
                        <td><a asp-page="EditBoat" asp-route-id="@boat.Id">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }

}
